{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "test-dist",
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2017"
    ],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "@ng-app-framework/*": [
        "../node_modules/@ng-app-framework/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": ["../src/**/*.ts", "./**/*.ts"]
}
